@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ThongBao</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/animate.css","~/Content/bootstrap.min.css","~/Content/font-awesome.min.css","~/Content/main.css","~/Content/prettyPhoto.css","~/Content/price-range.css","~/Content/responsive.css" )
      
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container text-center">
		<div class="logo-404">
			<a href="index.html"><img src="~/images/home/logo.png" alt="" /></a>
		</div>
		<div class="content-404">
			<img src="~/images/404/404.png" class="img-responsive" alt="" />
			<h1><b>Rất tiếc!</b> Không thể tìm thấy trang này!</h1>
			<p style="font-size:1.2em;"> @Model </p>
			<h2><a href="~/home/index">Trở về Trang Chủ</a></h2>
		</div>
	</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/jquery/jquery.js","~/jquery/jquery.scrollUp.min.js", "~/jquery/bootstrap.min.js")
    <script>
        /*scroll to top*/

        $(document).ready(function () {
            $(function () {
                $.scrollUp({
                    scrollName: 'scrollUp', // Element ID
                    scrollDistance: 300, // Distance from top/bottom before showing element (px)
                    scrollFrom: 'top', // 'top' or 'bottom'
                    scrollSpeed: 300, // Speed back to top (ms)
                    easingType: 'linear', // Scroll to top easing (see http://easings.net/)
                    animation: 'fade', // Fade, slide, none
                    animationSpeed: 200, // Animation in speed (ms)
                    scrollTrigger: false, // Set a custom triggering element. Can be an HTML string or jQuery object
                    //scrollTarget: false, // Set a custom target element for scrolling to the top
                    scrollText: '<i class="fa fa-angle-up"></i>', // Text for element, can contain HTML
                    scrollTitle: false, // Set a custom <a> title if required.
                    scrollImg: false, // Set true to use image
                    activeOverlay: false, // Set CSS color to display scrollUp active point, e.g '#00FFFF'
                    zIndex: 2147483647 // Z-Index for the overlay
                });
            });
        });
    </script>
    
</body>
</html>
